<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="FACTORIAL NUMBER"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:id="@+id/tvFactorialNumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter number :"
        android:layout_below="@+id/tvFactorialNumber"
        android:layout_marginTop="128dp"
        android:layout_marginStart="24dp"
        android:id="@+id/tvEnterNumber" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEnterNumber"
        android:layout_marginStart="24dp"
        android:id="@+id/edtInputNumber"
        android:inputType="number"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnCalculate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:background="#3B3BE4"
        android:textColor="#ffffff"/>

</RelativeLayout>